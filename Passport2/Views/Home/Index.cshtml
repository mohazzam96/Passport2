
@{
    ViewData["Title"] = "Passport2";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <div class="container text-center">
        <h1>The Jordanian Passports and Residency Office</h1>

        <div class="button-container">
            <button href="/Home/PassportApplication" class="btn btn-lg btn-primary" onclick="location.href='@Url.Action("StartApplication", "Home")'">
                <img src="/css/Img/images.jpeg" width="150" height="350" alt="Jordanian Passport">
                <div>Renew the Jordanian Passport - تجديد جواز السفر الأردني</div>
            </button>

            <button class="btn btn-lg btn-secondary" onclick="location.href='@Url.Action("ResidencyForForeigners", "Home")'">
                <img src="/css/Img/REC.PNG" width="150" height="250" alt="Residency for Foreigners">
                <div>Residency for Foreigners - الإقامة للأجانب</div>
            </button>
        </div>
    </div>
</body>
</html>
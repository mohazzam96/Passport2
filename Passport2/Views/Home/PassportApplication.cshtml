@model List<PassportApplication>
@{
    ViewData["Title"] = "Passport2";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/styles.css">
</head>
<h2>Passport Applications</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Application ID</th>
            <th>Full Name</th>
            <th>Email</th>
            <th>Status</th>
            <th>Date of Application</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var app in Model)
        {
            <tr>
                <td>@app.ApplicationID</td>
                <td>@app.UserDetails.FullName</td> <!-- Access FullName from UserDetails -->
                <td>@app.UserDetails.Email</td>     <!-- Access Email from UserDetails -->
                <td>@app.Status</td>
                <td>@app.DateOfApplication.ToShortDateString()</td>
            </tr>
        } 
    </tbody>
</table>
